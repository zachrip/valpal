{
	"name": "valpal",
	"version": "0.0.2",
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "npm-run-all build:*",
		"build:remix": "remix build",
		"build:server": "esbuild --platform=node --format=cjs ./server/index.ts --outfile=build/server.js --bundle --external:not-the-systray --external:open",
		"dev": "npm-run-all build --parallel \"dev:*\"",
		"dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
		"dev:node": "cross-env NODE_ENV=development nodemon --trace-uncaught --require dotenv/config ./build/server.js --watch ./build/server.js",
		"dev:remix": "remix watch",
		"start": "cross-env NODE_ENV=production node ./server.js",
		"typecheck": "tsc",
		"pkg": "pkg -c pkg.json build/server.js --output dist/valpal.exe && editbin.exe /subsystem:windows dist/valpal.exe"
	},
	"dependencies": {
		"@radix-ui/react-dialog": "^1.0.2",
		"@remix-run/express": "^1.13.0",
		"@remix-run/node": "^1.13.0",
		"@remix-run/react": "^1.13.0",
		"axios": "^1.3.3",
		"compression": "^1.7.4",
		"cross-env": "^7.0.3",
		"express": "^4.18.2",
		"isbot": "^3.6.5",
		"jimp": "^0.22.7",
		"morgan": "^1.10.0",
		"not-the-systray": "^0.3.1",
		"open": "^8.4.2",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"remix-utils": "^6.0.0",
		"uuid": "^9.0.0",
		"ws": "^8.13.0",
		"zod-form-data": "^2.0.0"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.13.0",
		"@remix-run/eslint-config": "^1.13.0",
		"@types/compression": "^1.7.2",
		"@types/express": "^4.17.17",
		"@types/morgan": "^1.9.4",
		"@types/react": "^18.0.25",
		"@types/react-dom": "^18.0.8",
		"@types/uuid": "^9.0.0",
		"@types/ws": "^8.5.4",
		"dotenv": "^16.0.3",
		"eslint": "^8.27.0",
		"husky": "^8.0.3",
		"nodemon": "^2.0.20",
		"npm-run-all": "^4.1.5",
		"pkg": "^5.8.1",
		"prettier": "^2.8.4",
		"pretty-quick": "^3.1.3",
		"tailwindcss": "^3.2.6",
		"typescript": "^4.8.4"
	},
	"engines": {
		"node": ">=14"
	}
}
